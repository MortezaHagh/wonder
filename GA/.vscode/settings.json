{
    "editor.rulers": [
        80,
        120
    ],
    "files.exclude": {
        "**/*.pyc": true,
        "**/LICENSE": true,
        "**/*gitignore": true,
        "**/*pycache*": true
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.formatOnSave": true
    },
    "autopep8.args": [
    "--max-line-length",
    "119",
    "--experimental"
    ],
    "python.formatting.autopep8Args": [
        "--max-line-length",
        "140",
        "--experimental"
    ],
    "python.formatting.provider": "none"
}